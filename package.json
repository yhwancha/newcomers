{
  "name": "newcomers-monorepo",
  "private": true,
  "scripts": {
    "dev": "pnpm --parallel -r dev",
    "dev:web": "pnpm --filter '@newcomers/web' dev",
    "dev:api": "pnpm --filter '@newcomers/api' dev",
    "build": "pnpm -r build",
    "install:all": "pnpm install",
    "clean": "pnpm --recursive exec rm -rf dist node_modules"
  },
  "devDependencies": {
    "typescript": "^5.3.3",
    "@types/node": "^20.10.4"
  }
}
